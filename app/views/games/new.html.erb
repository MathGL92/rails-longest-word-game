<h1>New game</h1>

<div class="letters-container">
  <% @letters.each do |letter|%>

    <div class="letter"><%= letter %></div>

  <% end %>
</div>


<p>What is the longest word you can find?</p>
<form action="/score" method="POST" class="input-group">
  <input type="text" name="word" class="form-control" value="<%= params[:word] %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <input type="submit" value="Play" class="btn btn-light">
</form>
